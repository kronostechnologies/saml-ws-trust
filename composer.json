{
  "name": "kronos/saml-ws-trust",
  "type": "library",
  "description": "Kronos Saml WS-Trust improvement of simplesamlphp",
  "homepage": "https://github.com/kronostechnologies/saml-ws-trust",
  "license": "MIT",
  "keywords": [
    "kronos",
    "saml",
    "ws-trust",
    "wstrust",
    "saml 2.0",
    "saml 1.1"
  ],
  "autoload": {
    "psr-4": {
      "Kronos\\SamlWsTrust\\": "Kronos/SamlWsTrust",
      "Kronos\\Tests\\SamlWsTrust\\": "tests/Kronos/Tests/SamlWsTrust"
    }
  },
  "require": {
    "php": "~7.2",
    "ext-dom": "*",
    "kronostechnologies/php-coding-standard": "^1.0.2",
    "ext-openssl": "*",
    "simplesamlphp/saml2": "^3.3.8",
    "robrichards/xmlseclibs": "^3.0.4",
    "ext-zlib": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.20",
    "vimeo/psalm": "4.23.0"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  }
}
